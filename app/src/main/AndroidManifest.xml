<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.modellapp">

    <!-- Tell the system this app requires OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="3D Modelling App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="szsofia.thesis.modellapp.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="szsofia.thesis.modellapp.SceneActivity" android:screenOrientation="portrait"/>
        <activity android:screenOrientation="portrait"
            android:name="szsofia.thesis.modellapp.ModelMenuActivity"
            android:label="@string/title_activity_model_menu"
            android:theme="@style/AppTheme" />
        <activity android:name="szsofia.thesis.modellapp.LoadActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>